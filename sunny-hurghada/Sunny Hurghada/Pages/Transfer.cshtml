@page "{CurrentCulture?}"
@using Sunny_Hurghada.Pages
@model Sunny_Hurghada.Pages.TransferModel
@{
}
<div id="main-wrapper">

    <!-- Page Title -->
    <div class="image-cover page-title" style="background:url(/img/banner-1.jpg) no-repeat;" data-overlay="6">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="ipt-title">Transfer</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Transfer Section -->
    <section class="pt-4">
        <div class="container">
            <div class="row mt-5">

                <!-- Left Content -->
                <div class="col-lg-5 mb-5">
                    <div class="story-wrap explore-content pb-5">
                        <h2 class="mb-4">Transfer Service</h2>
                        <ul class="avl-features third d-block">
                            <li class="mw-100">Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</li>
                            <li class="mw-100">Aliquam tincidunt mauris eu risus.</li>
                            <li class="mw-100">Vestibulum auctor dapibus neque.</li>
                            <li class="mw-100">Nunc dignissim risus id metus.</li>
                            <li class="mw-100">Cras ornare tristique elit.</li>
                            <li class="mw-100">Vivamus vestibulum ntulla nec ante.</li>
                            <li class="mw-100">Praesent placerat risus quis eros.</li>
                            <li class="mw-100">Fusce pellentesque suscipit nibh.</li>
                        </ul>
                    </div>
                    <img src="img/transfer.jpg" class="img-fluid rounded" alt="Transfer Service Image" />
                </div>

                <!-- Form Section -->
                <div class="col-lg-7">
                    <div class="contact-form">
                        <form method="post">
                            <div asp-validation-summary="All"></div>

                            <div class="form-group">
                                <label asp-for="NewTransfer.Destination">Choose Your Destination</label>
                                <input asp-for="NewTransfer.Destination" class="form-control" placeholder="Select Destination" />
                                <span asp-validation-for="NewTransfer.Destination"></span>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="NewGuest.FullName">Full Name</label>
                                        <input asp-for="NewGuest.FullName" class="form-control" placeholder="Full Name" />
                                        <span asp-validation-for="NewGuest.FullName"></span>
                                    </div> 
                                </div>
                                <div class="col-lg-6">
                                   <div class="form-group">
                                        <label asp-for="NewGuest.Email">Email</label>
                                        <input asp-for="NewGuest.Email" type="email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="NewGuest.Email"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                   <div class="form-group">
                                        <label>Phone</label>
                                        <input asp-for="NewGuest.Phone" class="form-control" placeholder="Phone" />
                                        <span asp-validation-for="NewGuest.Phone"></span>
                                    </div> 
                                </div> 
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="NewTransfer.PickUpLocation">Pick-up Location</label>
                                        <input asp-for="NewTransfer.PickUpLocation" class="form-control" placeholder="Pick-up Location" />
                                        <span asp-validation-for="NewTransfer.PickUpLocation"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="NewTransfer.Adults">Adults</label>
                                        <input asp-for="NewTransfer.Adults" type="number" class="form-control" placeholder="0" />
                                        <span asp-validation-for="NewTransfer.Adults"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="NewTransfer.Children">Children</label>
                                        <input asp-for="NewTransfer.Children" type="number" class="form-control" placeholder="0" />
                                        <span asp-validation-for="NewTransfer.Children"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="NewTransfer.PickUpDateTime">Pickup Date</label>
                                        <input asp-for="NewTransfer.PickUpDateTime" type="date" class="form-control" />
                                        <span asp-validation-for="NewTransfer.PickUpDateTime"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="NewTransfer.PickUpDateTime">Pickup Time</label>
                                        <input asp-for="NewTransfer.PickUpDateTime" type="time" class="form-control" />
                                        <span asp-validation-for="NewTransfer.PickUpDateTime"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="NewTransfer.SpecialRequest">Special Request</label>
                                <textarea asp-for="NewTransfer.SpecialRequest" class="form-control" placeholder="Type Here..."></textarea>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Book now</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <a id="back2Top" class="top-scroll" title="Back to top" href="#"><i class="ti-arrow-up"></i></a>

</div>


